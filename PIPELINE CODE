# Earl Grey -> D. melanogaster

conda activate earlgrey
earlGrey \
  -g $VSC_DATA/benchmarking/d_melanogaster_fasta \
  -s drosophilaMelanogaster \
  -o $VSC_DATA/benchmarking/d_melanogaster_out \
  -t $SLURM_CPUS_PER_TASK


# EDTA -> D. melanogaster

conda activate edta
EDTA.pl \
  --genome  d_melanogaster_fasta \
  --species others \
  --step all \
  --anno 1 \
  --sensitive 1 \
  --force 1 \
  --threads "$THREADS"


# Earl Grey -> S. mansoni
conda activate earlgrey
earlGrey \
  -g $VSC_DATA/final_analysis/s_mansoni_fasta \
  -s schistosomaMansoni \
  -o $VSC_DATA/final_analysis/mansoni_out \
  -t $SLURM_CPUS_PER_TASK

